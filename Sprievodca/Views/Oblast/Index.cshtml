@model IEnumerable<Sprievodca.Models.MainModels.Oblast>

@{
    ViewData["Title"] = "Index";
}

<h1>Oblasť</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Kraj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PodOblast) / @Html.DisplayNameFor(model => model.Sektor)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @if (item.ExistPodOblast == true)
                    {
                        <a asp-area="" asp-controller="PodOblast" asp-action="Create">Vytvor podoblasť |</a>
                    }

                    @if (item.ExistPodOblast == false)
                    {
                        <a asp-area="" asp-controller="Sektor" asp-action="Create">Vytvor sektor |</a>
                    }
                
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
             <td>
                    <a asp-area="" asp-controller="Kraj" asp-action="Details" asp-route-id="@item.KrajId">@item.Kraj.Nazov</a>
            </td>
                @if (item.PodOblast != null && item.PodOblast.Count > 0)
                {
                    <td>
                        <select class="form-control" onchange="window.location.href=this.value;">
                            <option value="">-- Vyber podoblasť --</option>
                            @{
                                foreach (var podOblast in item.PodOblast)
                                {
                                    if (podOblast.Name != null)
                                    {
                                        <option value="@Url.Action("Details", "PodOblast", new { id = podOblast.Id })">@podOblast.Name</option>
                                    }
                                }
                            }
                        </select>
                        
                    </td>
                }
                @if (item.Sektor != null && item.Sektor.Count > 0)
                {
                    <td>
                        <select class="form-control" onchange="window.location.href=this.value;">
                            <option value="">-- Vyber sektor --</option>
                            @{
                                foreach (var sektor in item.Sektor)
                                {
                                    if (sektor.Name != null)
                                    {
                                        <option value="@Url.Action("Details", "Sektor", new { id = sektor.Id })">@sektor.Name</option>
                                    }
                                }
                            }
                        </select>

                    </td>
                }
        </tr>
}
    </tbody>
</table>

<div class="container">
    <a asp-area="" asp-controller="Home" asp-action="Admin">Back</a>
</div>

<script>
    document.getElementById("podoblast-select, sektor-select").onchange = function () {
        var url = this.value;
        if (url) {
            window.location.href = url;
        }
        return false;
    };
</script>