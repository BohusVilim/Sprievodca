@model IEnumerable<Sprievodca.Models.MainModels.SubArea>

@{
    ViewData["Title"] = "Index";
}

<h1>Podoblasť</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Sectors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-controller="Sector" asp-action="Create">Vytvor sektor |</a>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sectors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area.Name)
            </td>
        </tr>
}
    </tbody>
</table>

<div class="container">
    <a asp-area="" asp-controller="Home" asp-action="Admin">Back</a>
</div>
