@model Sprievodca.Models.MainModels.Oblast

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Oblast</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kraj)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kraj.Nazov)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PodOblast)
        </dt>
        <dd class="col-sm-10">
            @if (Model.PodOblast != null)
            {
                @foreach (var podOblast in Model.PodOblast)
                {
                    @Html.DisplayFor(model => podOblast.Name)
                    <br/>
                }
            }
        </dd>
    </dl>
</div>
<div>
