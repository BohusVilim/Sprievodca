@model Sprievodca.Models.MainModels.Area

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Oblast</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegionId" class="control-label"></label>
                <select asp-for="RegionId" class="form-control" asp-items="@(new SelectList(ViewBag.Regions, "Value", "Text"))">
                <option value="">-- Vyber kraj --</option>
                </select>
                <span asp-validation-for="RegionId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label asp-for="ExistSubArea" class="form-check-label">
                    <br />
                    <input class="form-check-input" asp-for="ExistSubArea" /> @Html.DisplayNameFor(model => model.ExistSubArea)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

